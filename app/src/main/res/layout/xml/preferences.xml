        android:inputType="number"
        android:key="@string/min_time"
        android:defaultValue="@string/min_time_default"
        android:title="@string/min_time"/>
	<EditTextPreference 
        android:inputType="number"
        android:key="@string/min_distance"
        android:defaultValue="@string/min_distance_default"
